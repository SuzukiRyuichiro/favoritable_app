<div class="max-w-sm bg-white border border-gray-200 w-full xs:flex inline-block md:flex-col rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
  <div class="rounded-t-lg bg-cover h-48 flex-grow md:w-auto relative" style="background-image: url(<%= product.image_url %>);">
    <%# Check mark for favorite %>
    <input id="default-checkbox" type="checkbox" <%= "checked" if product.favorited_by?(current_user) %> class="w-10 h-10 absolute top-3 right-3 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
  </div>
  <div class="p-5 flex-grow">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= product.name %></h5>
  </div>
</div>
